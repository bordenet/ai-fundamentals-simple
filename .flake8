[flake8]
# Maximum line length (per bordenet Python Style Guide)
max-line-length = 120

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    htmlcov

# Error codes to ignore
ignore =
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E203: whitespace before ':' (conflicts with black)
    E203

# Select specific error codes to check
select =
    E,  # pycodestyle errors
    W,  # pycodestyle warnings
    F,  # pyflakes
    C,  # mccabe complexity
    B,  # flake8-bugbear
    N,  # pep8-naming
    D,  # pydocstyle

# Maximum complexity
max-complexity = 10

# Docstring conventions (per bordenet Python Style Guide - PEP 257)
docstring-convention = pep257

# Per-file ignores
per-file-ignores =
    # Tests don't need module/package docstrings
    tests/*:D100,D104,
    # __init__.py files don't need module docstrings
    __init__.py:D104,F401
